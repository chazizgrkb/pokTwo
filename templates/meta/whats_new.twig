{% extends "meta/_layout.twig" %}

{% block title %}What's new?{% endblock %}

	{% block content %}
        {% for news in news %}
            <h2>{{ news.title }} <span style="color:gray;">{{ news.time | date("F jS Y") }}</span></h2>
            {{ news.text | markdown }}
            <br><br><br>
        {% endfor %}
    {% endblock %}
