{% extends "_layout.twig" %}
{% block content %}
    {% if sentMessage %}
        <div class="success">
            Sent message.
        </div>
    {% endif %}
    <table width="100%" align="center" cellpadding="0" cellspacing="0" border="0" bgcolor="#CCCCCC">
        <tbody>
        <tr>
            <td><img src="/img/box_login_tl.gif" width="5" height="5"></td>
            <td width="100%"><img src="/img/pixel.gif" width="1" height="5"></td>
            <td><img src="/img/box_login_tr.gif" width="5" height="5"></td>
        </tr>
        <tr>
            <td><img src="/img/pixel.gif" width="5" height="1"></td>
            <td>
                <div class="moduleTitleBar">
                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                        <tr valign="top">
                            <td>
                                <div class="moduleTitle">My Messages</div>
                            </td>
                            <td align="right">
                                <div style="font-weight: color: #444; margin-right: 5px;">
                                    <b>1-10</b> of <b>[placeholder]</b>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                {% for message in inbox %}
                    <div class="moduleEntry">
                        <table width="100%" cellpadding="0" cellspacing="0" border="0">
                            <tbody>
                            <tr valign="top">
                                <td>
                                    <table cellpadding="0" cellspacing="0" border="0">
                                        <tbody>
                                        <tr>
                                            <td><a href="profile.php?user={{ message.u_name }}"><img
                                                            src="get_still.php?video_id={{ video.video_id }}&amp;still_id=2"
                                                            class="moduleEntryThumb" width="100" height="75"></a></td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <td width="100%">
                                    <div class="moduleEntryTitle">{{ message.title }}</div>
                                    <div class="mailMessageArea">
                                        {{ message.text }}
                                    </div>
                                    <div class="moduleEntryDetails">Sent: {{ message.time|date("F j, Y") }} by <a
                                                href="profile.php?user={{ message.u_name }}">{{ message.u_name }}</a>
                                    </div>
                                    <form method="post"
                                          action="outbox.php?user={{ message.u_name }}&subject=Re: {{ message.title }}">
                                        <input type="submit" value="Reply">
                                    </form>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                {% else %}
                {% endfor %}
                <!-- begin paging -->
                <div style="font-size: 13px; font-weight: bold; color: #444; text-align: right; padding: 5px 0px 5px 0px;">
                    Result Page:
                    &nbsp;<a href="results.php?search={{ query }}&amp;page=1">&lt;&nbsp;Previous</a>&nbsp;<span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=1">1</a></span><span
                            style="color: #444; background-color: #FFFFFF; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;">2</span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=3">3</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=4">4</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=5">5</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=6">6</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=7">7</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=8">8</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=9">9</a></span><span
                            style="background-color: #CCC; padding: 1px 4px 1px 4px; border: 1px solid #999; margin-right: 5px;"><a
                                href="results.php?search={{ query }}&amp;page=10">10</a></span><a
                            href="results.php?search={{ query }}&amp;page=3">Next&nbsp;&gt;</a>&nbsp;
                </div>
                <!-- end paging -->
            </td>
            <td><img src="/img/pixel.gif" width="5" height="1"></td>
        </tr>
        <tr>
            <td><img src="/img/box_login_bl.gif" width="5" height="5"></td>
            <td><img src="/img/pixel.gif" width="1" height="5"></td>
            <td><img src="/img/box_login_br.gif" width="5" height="5"></td>
        </tr>
        </tbody>
    </table>
{% endblock %}