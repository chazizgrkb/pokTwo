{% extends "_layout.twig" %}
{% block title %}Settings{% endblock %}
{% block content %}
<form action="my_profile.php" method="post">
<div class="formTitle">My profile</div>
<table class="dataEntryTableSmall">
   <tr>
      <td valign="top" align="right">
         <span style="font-size: 14px;font-weight:bold;">Title</span>
      </td>
      <td class="b"><input type="text" name="title" size="45" maxlength="256" style="width:295px" value="{{ userdata.title }}"></td>
   </tr>
   {% if userdata.powerlevel > 1 %}
   <tr>
      <td valign="top" align="right">
         <span style="font-size: 14px;font-weight:bold;">
         Custom color
         </span>
      </td>
      <td class="b"><input name="customcolor" value="{{ userdata.customcolor | default('0000aa') }}" style="width:295px" data-jscolor="{}"></td>
   </tr>
   {% endif %}
   <tr>
      <td valign="top" align="right">
         <span style="font-size: 14px;font-weight:bold;">
         About
         </span>
      </td>
      <td class="b"><textarea name="about" rows="5" cols="80" wrap="virtual" style="width:295px;overflow:hidden;resize:none">{{ userdata.about }}</textarea></td>
   </tr>
   <tr>
      <td valign="top" align="right">
         <span style="font-size: 14px;font-weight:bold;">
         Location
         </span>
      </td>
      <td class="b"><input type="text" name="location" size="45" maxlength="128" style="width:295px" value="{{ userdata.location }}"></td>
   </tr>
   {% if glob_forum %}
   <tr>
      <td valign="top" align="right">
         <span style="font-size: 14px;font-weight:bold;">
         Forum signature
         </span>
      </td>
      <td class="b"><textarea name="signature" rows="5" cols="80" wrap="virtual" style="width:295px">{{ userdata.signature }}</textarea></td>
   </tr>
   {% else %}
   <input type="hidden" name="signature" value="{{ userdata.signature }}">
   {% endif %}
</table>
<div class="tableSubTitle">Options</div>
<table class="settings">
   <td valign="top" align="right">
      <span style="font-size: 14px;font-weight:bold;">
      Timezone
   </td>
   </span>
   <td class="b">
      <select name="timezone">
      {% for timezone in timezones %}
      <option value="{{ timezone }}" {% if userdata.timezone == timezone %}selected{% endif %} style="width:295px">{{ timezone }}</option>
      {% endfor %}
      </select>
   </td>
   </tr>
</table>
<input type="hidden" name="magic" value="please change my settings :)">
<input type="submit" name="action" value="Save Changes">
{% endblock %}
{% block custom_footer %}
{% if userdata.powerlevel > 1 %}
<script src="assets/js/jscolor.min.js"></script>
{% endif %}
{% endblock %}