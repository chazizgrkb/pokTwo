{% extends "_layout.twig" %}

{% block title %}Upload{% endblock %}

	{% block content %}
{% if error %}
	<div class="header_message">{{ error }}</div>
{% endif %}

<h2>Upload an image</h2>

<form action="/upload.php" method="POST" enctype="multipart/form-data">
	<p><input type="file" name="uploaded_file" size="40" required></p>
	<p><input type="text" name="title" placeholder="Title" size="64" required></p>
	<p><textarea name="description" placeholder="Description" cols="80" rows="15" required></textarea></p>
	<p><input type="text" name="tags" placeholder="Tags" size="80" required></p>
	<p><em>Tags need to be space-separated! For tags with several words, they should be written as_snake_case. Please include a lot of tags since it will be used to categorise and make your post searchable.</em></p>

	<p><input type="submit" value="Post"></input></p>
</form>
	{% endblock %}